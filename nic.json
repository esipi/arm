{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "myNICname": {
            "type": "string",
            "minLength": 3,
            "metadata": {
                "description": "Name the network interface"
            }
        },
        "parentVnet": {
            "type": "string",
            "metadata": {
                "description": "Select the parent Vnet"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('myNICname')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Network/virtualNetworks/', parameters('parentVnet'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat('Network/virtualNetworks', parameters('parentVnet'))]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}